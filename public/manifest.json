{
  "manifest_version": 2,
  "name": "Homegrown Site Blocker",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "storage", "*://*/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
